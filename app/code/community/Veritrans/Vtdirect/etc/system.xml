<?xml version="1.0"?>
<config>
  <sections>
    <payment>
      <groups>
        <vtdirect translate="label comment" module="vtdirect">
          <label>Veritrans Direct</label>
          <frontend_type>text</frontend_type>
          <sort_order>1</sort_order>
          <show_in_default>1</show_in_default>
          <show_in_website>1</show_in_website>
          <show_in_store>1</show_in_store>
          <fields>
                <active translate="label">
                  <label>Enabled</label>
                  <config_path>payment/vtdirect/active</config_path>
                  <frontend_type>select</frontend_type>
                  <source_model>adminhtml/system_config_source_yesno</source_model>
                  <sort_order>1</sort_order>
                  <show_in_default>1</show_in_default>
                  <show_in_website>1</show_in_website>
                  <show_in_store>0</show_in_store>
                </active>                
                <title translate="label">
                  <label>Title</label>
                  <config_path>payment/vtdirect/title</config_path>
                  <frontend_type>text</frontend_type>
                  <sort_order>4</sort_order>
                  <show_in_default>1</show_in_default>
                  <show_in_website>1</show_in_website>
                  <show_in_store>1</show_in_store>
                </title>
                
                <client_key_v2>
                  <label>Client Key</label>                  
                  <config_path>payment/vtdirect/client_key_v2</config_path>
                  <frontend_type>text</frontend_type>
                  <sort_order>7</sort_order>
                  <show_in_default>1</show_in_default>
                  <show_in_website>1</show_in_website>
                  <show_in_store>1</show_in_store>
                </client_key_v2>
                <server_key_v2>
                  <label>Server Key</label>
                  <config_path>payment/vtdirect/server_key_v2</config_path>
                  <frontend_type>text</frontend_type>
                  <sort_order>8</sort_order>
                  <show_in_default>1</show_in_default>
                  <show_in_website>1</show_in_website>
                  <show_in_store>1</show_in_store>
                </server_key_v2>
                <environment>
                  <label>Environment</label>
                  <config_path>payment/vtdirect/environment</config_path>
                  <frontend_type>select</frontend_type>
                  <source_model>vtdirect/system_config_source_api_environment</source_model>
                  <sort_order>9</sort_order>
                  <show_in_default>1</show_in_default>
                  <show_in_website>1</show_in_website>
                  <show_in_store>1</show_in_store>
                  <comment>Change to 'Production' once your store is going live</comment>
                </environment>
                <bank>
                  <label>Bank</label>
                  <config_path>payment/vtdirect/bank</config_path>
                  <frontend_type>text</frontend_type>
                  <sort_order>10</sort_order>
                  <show_in_default>1</show_in_default>
                  <show_in_website>1</show_in_website>
                  <show_in_store>1</show_in_store>
                  <comment>Change to bank that you will use once your store is going live</comment>
                </bank>
                <conversion_rate>
                  <label>Conversion rate</label>
                  <config_path>payment/vtdirect/conversion_rate</config_path>
                  <frontend_type>text</frontend_type>
                  <sort_order>10</sort_order>
                  <show_in_default>1</show_in_default>
                  <show_in_website>1</show_in_website>
                  <show_in_store>1</show_in_store>
                  <comment>Current rate to idr</comment>
                </conversion_rate>
                <error_message>
                  <label>Error Message</label>
                  <config_path>payment/vtdirect/error_message</config_path>
                  <frontend_type>textarea</frontend_type>
                  <sort_order>23</sort_order>
                  <show_in_default>1</show_in_default>
                  <show_in_website>1</show_in_website>
                  <show_in_store>0</show_in_store>
                </error_message>        
                <sort_order translate="label">
                  <label>Sort Order</label>
                  <config_path>payment/vtdirect/sort_order</config_path>
                  <frontend_type>text</frontend_type>
                  <sort_order>27</sort_order>
                  <show_in_default>1</show_in_default>
                  <show_in_website>1</show_in_website>
                  <show_in_store>0</show_in_store>
                </sort_order>                                   
          </fields>
        </vtdirect>
      </groups>
    </payment>
  </sections>
</config>
